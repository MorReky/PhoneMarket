@{

    //ViewBag.Title = "Home Page";
    Layout = "/Views/Shared/_Layout.cshtml";// Для представления не используется мастер-страница
}
<h3>Товары магазина PhoneMarket</h3>
<br />
<table>
    <thead>
        <tr>
            <td>Название</td>
            <td>Производитель</td>
            <td>Цена (руб)</td>
            <td>&nbsp;</td>
        </tr>
    </thead>
    <tbody>
        @*Движок raazor для написания внутри страницы кода на C#*@
        @{
            foreach (var phone in ViewBag.Phones)
            {
                <tr>
                    <td>@phone.Name</td>
                    <td>@phone.Producer</td>
                    <td>@phone.Price</td>
                    <td><a href="/Home/Buy/@phone.Id">Купить</a></td>
                </tr>
            }
        }
    </tbody>
</table>